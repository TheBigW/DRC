input "left_in", "right_in" {
        device: "alsa" { device: "hw:3,1"; ignore_xrun: true; };
};

output "left_out", "right_out" {
        device: "alsa" { device: "hw:2,0"; ignore_xrun: true; };
};

filter "left" {
        from_inputs: "left_in";
        to_outputs: "left_out";
        process: 0;
   coeff: -1;
};

filter "right" {
        from_inputs: "right_in";
        to_outputs: "right_out";
        process: 1;
   coeff: -1;
};
