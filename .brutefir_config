logic: "cli" { port: 3000; };

coeff "DRC_L" {
       filename: "~/filter_1.pcm";
       format: "FLOAT_LE";     # file format
};
coeff "DRC_R" {
       filename: "~/filter_2.pcm";
       format: "FLOAT_LE";     # file format
};

input "left_in", "right_in" {
        device: "alsa" { device: "hw:0,1"; ignore_xrun: true; };
};

output "left_out", "right_out" {
        device: "alsa" { device: "hw:1,0"; ignore_xrun: true; };
	sample: "S32_LE";
};

filter "left_DRC" {
        from_inputs: "left_in";
        to_outputs: "left_out";
	coeff:"DRC_L";
	process: -1;
	crossfade: false;
};

filter "right_DRC" {
        from_inputs: "right_in";
        to_outputs: "right_out";
	coeff:"DRC_R";
	process: -1;
	crossfade: false;
};

