#!/bin/bash
BIT_DEPTH=32
SAMPLE_RATE=44100
SILENCE_LENGTH=2

AMPLITUDE="$1"
INPUT_HW="$2"
OUTPUT_HW="$3"
START_FREQ="$4"
END_FREQ="$5"
DURATION="$6"
IMP_OUT_FILE="$7"
REC_CHANNEL="$8"
PLUGIN_PATH=`dirname $0`

messurescript=${PLUGIN_PATH}"/measure"
#echo params $AMPLITUDE $INPUT_HW $OUTPUT_HW $START_FREQ $END_FREQ $DURATION $IMP_OUT_FILE $PLUGIN_PATH
echo "\n\n executing" $messurescript $BIT_DEPTH $SAMPLE_RATE $START_FREQ $END_FREQ $DURATION $SILENCE_LENGTH $INPUT_HW $OUTPUT_HW ${IMP_OUT_FILE} $AMPLITUDE "\n\n"

bash $messurescript $BIT_DEPTH $SAMPLE_RATE $START_FREQ $END_FREQ $DURATION $SILENCE_LENGTH $INPUT_HW $OUTPUT_HW $IMP_OUT_FILE $AMPLITUDE $REC_CHANNEL
